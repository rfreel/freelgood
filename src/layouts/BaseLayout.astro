---
import "../styles/tokens.css";
import "../styles/globals.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CommandK from "../components/CommandK.astro";

const { title = "Soot + Sepia Manual", description = "A practical manual for the modern web." } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <script is:inline>
      (function () {
        try {
          var stored = localStorage.getItem("theme") || "system";
          var prefersDark =
            window.matchMedia &&
            window.matchMedia("(prefers-color-scheme: dark)").matches;
          var effective =
            stored === "system" ? (prefersDark ? "dark" : "light") : stored;
          if (effective === "dark") {
            document.documentElement.dataset.theme = "dark";
          } else {
            document.documentElement.removeAttribute("data-theme");
          }
          document.documentElement.dataset.themeMode = stored;
        } catch (e) {}
      })();
    </script>
    <script is:inline>
      (function () {
        try {
          var r = localStorage.getItem("reader") === "true";
          if (r) document.documentElement.dataset.reader = "true";
        } catch (e) {}
      })();
    </script>
  </head>
  <body>
    <div class="page">
      <Header />
      <main class="container">
        <slot />
      </main>
      <Footer />
    </div>
    <CommandK />
  </body>
</html>
